{
  "name": "restaurant-billing-inventory",
  "version": "1.0.0",
  "description": "Aplicación de facturación y control de inventario para restaurante",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "restaurant",
    "billing",
    "inventory",
    "electron",
    "javascript"
  ],
  "author": "Restaurant Manager",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "moment": "^2.29.4"
  },
  "build": {
    "appId": "com.restaurant.billing",
    "productName": "Restaurant Billing & Inventory",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
} 